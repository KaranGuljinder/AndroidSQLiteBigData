<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView


            android:text="Big Data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="45sp"
            android:fontFamily="cursive"
            app:layout_constraintTop_toBottomOf="@id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" tools:ignore="MissingConstraints"/>


    <EditText
            android:id="@+id/edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tap your message ..."
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5"
    android:id="@+id/guideline"/>

    <android.support.constraint.Guideline android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/guidelineVert"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guidelineVert2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.40"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guidelineVert3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.65"/>


    <Button
            android:id="@+id/onegram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@id/guidelineVert"
            app:layout_constraintTop_toBottomOf="@id/edittext"
            android:text=" 1 - Gram"
            />

    <Button
            android:id="@+id/twogram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@id/guidelineVert2"
            app:layout_constraintTop_toBottomOf="@id/edittext"
            android:text=" 2 - Gram"
    />

    <Button
            android:id="@+id/threegram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintLeft_toRightOf="@id/guidelineVert3"
            app:layout_constraintTop_toBottomOf="@id/edittext"
            android:text=" 3- Gram"
    />


</android.support.constraint.ConstraintLayout>